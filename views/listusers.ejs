<!doctype html>
<html>
  <head>
    <title>Registered Users | <%=shopData.shopName%></title>
    <link rel="stylesheet" Â type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Registered Users at <%=shopData.shopName%></h1>
    
    <% if (availableUsers.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% availableUsers.forEach(function(user){ %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.firstName %></td>
              <td><%= user.lastName %></td>
              <td><%= user.email %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No users are currently registered.</p>
    <% } %>

  </body>
</html>