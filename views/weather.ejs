<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Weather - Bertie's Books</title>
  <link rel="stylesheet" href="/main.css">
  <style>
    /* Local fallback cosmetics */
    .weather-card { max-width:720px; margin:20px auto; padding:18px; border-radius:10px; background:#fff; box-shadow:0 6px 18px rgba(0,0,0,0.06); }
    .weather-top { display:flex; align-items:center; gap:16px; }
    .weather-temp { font-size:40px; font-weight:700; color:#1f4b99; }
    .small { font-size:0.95rem; color:#444; }
    .error { color:#7a1b1b; background:#fbeaea; padding:10px; border-radius:8px; margin-bottom:12px; }
    input[name="city"] { padding:6px 8px; font-size:1rem; margin-right:8px; border-radius:6px; border:1px solid #ccc; }
    button { padding:8px 12px; border-radius:6px; border:none; background:#1f4b99; color:#fff; cursor:pointer; }
    ul.weather-details { list-style:none; padding-left:0; margin-top:12px; }
    ul.weather-details li { margin-bottom:6px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Bertie's Books — Weather</h1>

    <div class="weather-card">
      <form method="get" action="/weather">
        <label for="city">City</label>
        <input id="city" name="city" type="text" value="<%= city ? city : '' %>" placeholder="e.g. London" />
        <button type="submit">Get Weather</button>
      </form>

      <% if (error) { %>
        <div class="error"><strong>Error:</strong> <%= error %></div>
      <% } else if (weather) { %>
        <div class="weather-top">
          <% if (weather.icon) { %>
            <img src="http://openweathermap.org/img/wn/<%= weather.icon %>@2x.png" alt="weather icon" />
          <% } %>
          <div>
            <div class="weather-temp"><%= weather.temp %>°C</div>
            <div class="small"><%= weather.description ? weather.description : '' %> — <strong><%= weather.name %></strong></div>
          </div>
        </div>

        <ul class="weather-details">
          <li>Feels like: <strong><%= weather.feels_like %>°C</strong></li>
          <li>Humidity: <strong><%= weather.humidity %>%</strong></li>
          <li>Pressure: <strong><%= weather.pressure %> hPa</strong></li>
          <li>Wind: <strong><%= weather.wind_speed !== null ? weather.wind_speed + ' m/s' : 'N/A' %></strong>
          <% if (weather.wind_deg) { %>(direction <%= weather.wind_deg %>°)<% } %></li>
        </ul>
      <% } else { %>
        <p>Enter a city and press "Get Weather" (defaults to London).</p>
      <% } %>
    </div>

    <p><a href="/">Back to home</a></p>
  </div>
</body>
</html>
